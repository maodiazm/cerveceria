<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.fragments.UsuarioFragment">
    
    <ImageView
        android:id="@+id/foto_perfil"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="250dp"
        android:layout_height="220dp"
        android:src="@drawable/perfilx">
    </ImageView>

    <Button
        android:id="@+id/botoncamara"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="280dp"
        android:backgroundTint="@color/color_secundario"
        android:text="Camara"
        android:fontFamily="@font/myriad_semibold">
    </Button>

    <Button
        android:id="@+id/botongaleria"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="280dp"
        android:backgroundTint="@color/fondo_inicio"
        android:text="Galeria"
        android:fontFamily="@font/myriad_semibold">
    </Button>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/buttonNavigationMenu"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="650dp"
        android:background="@color/white"
        app:itemIconTint="@color/color_secundario"
        app:itemTextColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/menu_navigation_bar"
        tools:ignore="MissingContrains">

    </com.google.android.material.bottomnavigation.BottomNavigationView>




</FrameLayout>